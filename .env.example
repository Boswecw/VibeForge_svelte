# ============================================================================
# VibeForge Frontend Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values.
# Frontend env vars must be prefixed with VITE_ to be exposed to the browser.

# ============================================================================
# Development Server
# ============================================================================

VITE_PUBLIC_API_BASE_URL=http://localhost:5173

# ============================================================================
# Backend Service URLs
# ============================================================================
# VibeForge is a frontend-only application that consumes NeuroForge and DataForge APIs.
# All API calls go directly from browser to backend services.

# DataForge API base URL (Context, Analytics, Storage)
VITE_DATAFORGE_API_BASE=http://localhost:8001/api/v1

# NeuroForge API base URL (LLM Execution, Versioning, Deployments)
VITE_NEUROFORGE_API_BASE=http://localhost:8002/api/v1

# API key for authenticating with backend services
VITE_VIBEFORGE_API_KEY=vf-dev-key

# ============================================================================
# Optional: Backend Service Certificates
# ============================================================================
# For local development with self-signed certs, you may need:
# NODE_EXTRA_CA_CERTS=/path/to/ca.pem

# ============================================================================
# Feature Flags
# ============================================================================

# Enable semantic search in context selector (requires DataForge)
VITE_ENABLE_CONTEXT_SEARCH=true

# Enable multi-model comparisons (requires NeuroForge)
VITE_ENABLE_MODEL_COMPARISON=true

# Enable run history (requires DataForge)
VITE_ENABLE_RUN_HISTORY=true

# ============================================================================
# Logging & Debugging
# ============================================================================

# Log API calls to console (development only)
VITE_LOG_API_CALLS=false

# Set to true to see integration debugging
VITE_DEBUG_INTEGRATION=false
